<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
<script>
// Examples of Array Methods
// pop()
// Removes last element of an array and returns it.

let fruits = ["apple", "banana", "mango"];
fruits.pop(); 
console.log(fruits); // ["apple", "banana"]

// push(arg/s)
// Adds element(s) to the end of an array.

let colors = ["red", "green"];
colors.push("blue");
console.log(colors); // ["red", "green", "blue"]

//  shift()
// Removes first element of an array and returns it.

let numbers = [10, 20, 30];
numbers.shift();
console.log(numbers); // [20, 30]

//  unshift(arg/s)
// Adds element(s) to the beginning of an array.

let cities = ["Hyderabad", "Delhi"];
cities.unshift("Mumbai");
console.log(cities); // ["Mumbai", "Hyderabad", "Delhi"]

// slice(startIndex, endIndex)
// Returns a new array from the given range.
//Does not change the original array.

let animals = ["cat", "dog", "lion", "tiger"];
let wild = animals.slice(2, 4);
console.log(wild); // ["lion", "tiger"]
console.log(animals); // ["cat", "dog", "lion", "tiger"]

// splice(index, count, newElement/s)
// Removes or replaces existing elements.
// It changes the original array.

let cars = ["BMW", "Audi", "Tata"];
cars.splice(1, 1, "Tesla"); 
console.log(cars); // ["BMW", "Tesla", "Tata"]

// reverse()
// Reverses the order of the elements in place.

let nums = [1, 2, 3, 4];
nums.reverse();
console.log(nums); // [4, 3, 2, 1]

// concat(arg/s)
// Combines two or more arrays and returns a new array.

let arr1 = [1, 2];
let arr2 = [3, 4];
let result = arr1.concat(arr2);
console.log(result); // [1, 2, 3, 4]

// join(arg)
// Joins all elements into a string, using the given separator.

let words = ["I", "love", "JS"];
let sentence = words.join(" ");
console.log(sentence); // "I love JS"

// toString()
// Converts array to a comma-separated string.

let letters = ["a", "b", "c"];
console.log(letters.toString()); // "a,b,c"


</script>
</body>
</html>
